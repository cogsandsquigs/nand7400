namespace Nand7400 {};

[Error]
enum AssemblerError {
	"AssemblerError",
};

interface Assembler {
	constructor(AssemblerConfig config);
	void set_config(AssemblerConfig config);
	
	[Throws=AssemblerError]
	bytes assemble([ByRef] string source);
};

dictionary AssemblerConfig {
	sequence<Opcode> opcodes;
};

dictionary Opcode {
	string mnemonic;
	u8 binary;
	u32 num_args;
};